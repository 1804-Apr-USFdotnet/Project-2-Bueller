node('master'){
    stage('import'){
        git branch: 'dev', url: 'https://github.com/1804-Apr-USFdotnet/Project-2-Bueller.git'
    }
    stage('build'){
        try{
            dir('Project2-Bueller'){
                bat 'nuget restore'
                bat 'msbuild /p:MvcBuildViews=true'
            }
        }
        catch(exc){
            slackError('build')
            throw exc
        }
    }
    stage('test'){
        try{
           dir('Project2-Bueller'){
               bat "VSTest.Console.exe CrossTableUnitTests\\bin\\Debug\\CrossTableUnitTests.dll"
               bat "VSTest.Console.exe CrudUnitTest\\bin\\Debug\\CrudUnitTest.dll"
           }
        }
        catch(exc){
            slackError('test')
            throw exc
        }
    }
    stage('analyze'){
        try{
            dir('Project2-Bueller'){
                bat 'SonarScanner.MSBuild.exe begin /k:project2-bueller /d:sonar.organization="abyssopelagic-github"'
                bat 'msbuild /t:rebuild'
                bat 'SonarScanner.MSBuild.exe end'
        }
        }
        catch(exc){
            slackError('analyze')
            //throw exc
        }
    }
    stage('package'){
        try{
        dir('Project2-Bueller/BuellerWebApi'){
            bat 'msbuild /t:package'
        }
        }
        catch(exc){
            slackError('package')
            throw exc
        }
    }
    stage('deploy'){
        try{
            dir("BuellerWebApi\\obj\\Debug\\Package"){
                bat "\"C:\\Program Files\\IIS\\Microsoft Web Deploy V3\\msdeploy.exe\" -source:package='C:\\Program Files (x86)\\Jenkins\\workspace\\Project_2\\Project2-Bueller\\BuellerWebApi\\obj\\Debug\\Package\\BuellerWebApi.zip' -dest:auto,computerName=\"${service_deploy_location}/msdeploy.axd\",userName=\"Administrator\",password=\"${service_password}\",authtype=\"basic\",includeAcls=\"False\" -verb:sync -disableLink:AppPoolExtension -disableLink:ContentExtension -disableLink:CertificateExtension -setParamFile:\"C:\\Program Files (x86)\\Jenkins\\workspace\\Project_2\\Project2-Bueller\\BuellerWebApi\\obj\\Debug\\Package\\BuellerWebApi.SetParameters.xml\" -AllowUntrusted=True"
                slackSend message:"Deployment Complete"  
        }
        }
        catch(exc){
            slackError('deploy')
            throw exc
        }
    }
}

def slackError(stageName) {
    slackSend color: 'danger', message: "${stageName} stage failed. [<${JOB_URL}|${env.JOB_NAME}> <${env.BUILD_URL}console|${env.BUILD_DISPLAY_NAME}>] [${currentBuild.durationString[0..-14]}]"
}
