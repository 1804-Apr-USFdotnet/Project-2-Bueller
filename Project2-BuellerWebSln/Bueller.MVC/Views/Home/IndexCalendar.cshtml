@using Bueller.MVC.Models
@model IEnumerable<Bueller.MVC.Models.Class>

@{
    ViewBag.Title = "IndexCalendar";
    List<Class> monClasses = Model.Where(x => x.Mon == 1).ToList();
    List<Class> tueClasses = Model.Where(x => x.Tues == 1).ToList();
    List<Class> wedClasses = Model.Where(x => x.Wed == 1).ToList();
    List<Class> thurClasses = Model.Where(x => x.Thurs == 1).ToList();
    List<Class> friClasses = Model.Where(x => x.Fri == 1).ToList();
}

<header class="masthead" style="background-image: url(http://www.collegerank.net/wp-content/uploads/2015/08/university-of-washington-quad.jpg)">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Bueller</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="card-deck">
    <div class="card">
        <div class="card-header">Monday Classes</div>
        <div class="card-body">
            <ul>
                @if (monClasses.Any())
                {
                    foreach (var Class in monClasses)
                    {
                        <li><b>@Class.Name</b>, @Class.StartTime-@Class.EndTime</li>
                    }
                }
            </ul>
        </div>
    </div>
    <div class="card">
        <div class="card-header">Tuesday Classes</div>
        <div class="card-body">
            <ul>
                @if (tueClasses.Any())
                {
                    foreach (var Class in tueClasses)
                    {
                        <li><b>@Class.Name</b>, @Class.StartTime-@Class.EndTime</li>
                    }
                }
            </ul>
        </div>
    </div>
    <div class="card">
        <div class="card-header">Wednesday Classes</div>
        <div class="card-body">
            <ul>
                @if (wedClasses.Any())
                {
                    foreach (var Class in wedClasses)
                    {
                        <li><b>@Class.Name</b>, @Class.StartTime-@Class.EndTime</li>
                    }
                }
            </ul>
        </div>
    </div>
    <div class="card">
        <div class="card-header">Thursday Classes</div>
        <div class="card-body">
            <ul>
                @if (thurClasses.Any())
                {
                    foreach (var Class in thurClasses)
                    {
                        <li><b>@Class.Name</b>, @Class.StartTime-@Class.EndTime</li>
                    }
                }
            </ul>
        </div>
    </div>
    <div class="card">
        <div class="card-header">Friday Classes</div>
        <div class="card-body">
            <ul>
                @if (friClasses.Any())
                {
                    foreach (var Class in friClasses)
                    {
                        <li><b>@Class.Name</b>, @Class.StartTime-@Class.EndTime</li>
                    }
                }
            </ul>
        </div>
    </div>
</div>